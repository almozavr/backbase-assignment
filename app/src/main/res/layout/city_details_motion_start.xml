<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

  <ImageView
      android:id="@+id/city_details_picture"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginEnd="8dp"
      android:adjustViewBounds="true"
      android:cropToPadding="false"
      android:scaleType="fitStart"
      app:layout_constraintEnd_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:srcCompat="@tools:sample/backgrounds/scenic[17]"
      />
  <TextView
      android:id="@+id/city_details_name"

      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginEnd="16dp"
      android:layout_marginTop="8dp"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
      app:layout_constraintEnd_toEndOf="@+id/city_details_picture"
      app:layout_constraintTop_toBottomOf="@+id/city_details_picture"
      tools:text="@sample/cities.json/data/name"
      />
  <TextView
      android:id="@+id/city_details_coords"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="8dp"
      android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
      app:layout_constraintEnd_toEndOf="@+id/city_details_name"
      app:layout_constraintTop_toBottomOf="@+id/city_details_name"
      tools:text="@sample/cities.json/data/coord/lat"
      />
  <TextView
      android:id="@+id/city_details_description"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="parent"
      tools:text="@tools:sample/lorem/random"
      />

</androidx.constraintlayout.widget.ConstraintLayout>
