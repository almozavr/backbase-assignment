<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/cityListFragment"
    >

  <fragment
      android:id="@+id/cityListFragment"
      android:name="backbase.assignment.ui.citylist.CityListFragment"
      android:label="@string/app_name"
      tools:layout="@layout/city_list_fragment">
    <action
        android:id="@+id/nav_action_city_list_to_map"
        app:destination="@id/cityMapFragment"
        app:popUpTo="@+id/cityListFragment"/>
  </fragment>
  <fragment
      android:id="@+id/cityMapFragment"
      android:name="backbase.assignment.ui.citymap.CityMapFragment"
      android:label="@string/app_name"
      >
    <argument
        android:name="location"
        app:argType="reference"
        app:nullable="false"/>
  </fragment>

</navigation>
